
WindowManager:

    HomeWindow:
    WorkoutWindow:
    ExercisesWindow:
    HistoryWindow:
    WorkoutHistoryWindow:
    ExerciseSessionWindow:
    ShowWorkoutWindow:
    ShowExerciseWindow:

<HomeWindow>:
    name: 'home'

    MDRectangleFlatButton:
        text: 'Start Workout'
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        on_press: 
            app.root.current = 'workout'
            root.manager.transition.direction = "left"

    MDRectangleFlatButton:
        text: 'Workout History'
        pos_hint: {'center_x': 0.5, 'center_y': 0.4}
        on_press: 
            app.root.current = 'history'
            root.manager.transition.direction = "left"

<WorkoutWindow>:
    name: 'workout'

<ExerciseSessionWindow>:
    name: 'exercise_session'

<HistoryWindow>:
    name: 'history'

    MDRectangleFlatButton:
        text: 'Back'
        pos_hint: {'center_x': 0.8, 'center_y': 0.9}
        on_press: 
            app.root.current = 'home'
            root.manager.transition.direction = 'right'

